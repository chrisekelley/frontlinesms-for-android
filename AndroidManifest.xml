<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.frontlinesms.android"
          android:installLocation="auto"
          android:versionCode="1"
          android:versionName="0.0.1">

    <uses-sdk android:minSdkVersion="7"/>
    <uses-sdk android:targetSdkVersion="7"/>

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
            android:icon="@drawable/icon"
            android:label="@string/app_name"
            android:name="FrontlineSMS"
            android:exported="true"
            android:debuggable="true"
            android:theme="@style/FrontlineSMSTheme">>

        <!-- SPLASH SCREEN -->
        <activity android:name=".activity.Splash"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- HOME / MAIN MENU -->
        <!--<activity android:name=".activity.Home"/>-->
        <activity android:name=".activity.Dashboard">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- CONTACTS -->
        <activity android:name=".activity.ContactList">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- GROUPS -->
        <activity android:name=".activity.GroupList">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- KEYWORD LIST -->
        <activity android:name=".activity.Keywords"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="net.frontlinesms.android.KeywordListActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- MESSAGES -->
        <activity android:name=".activity.MessageList">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- MESSAGE COMPOSER -->
        <activity android:name=".activity.MessageComposer">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- SETTINGS -->
        <activity android:name=".activity.Settings">
            <intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
        </activity>

        <!-- SMS RECEIVER -->
        <!--<receiver android:name=".SmsReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>-->

        <provider
                android:name=".db.FrontlineSmsContentProvider"
                android:authorities="net.frontlinesms.android.model.repository.frontlinesmscontentprovider"/>

        <provider android:name=".search.SuggestionProvider"
            android:authorities="net.frontlinesms.android.search.SuggestionProvider" />

        <meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />

    </application>

</manifest> 