<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fsms="http://schemas.android.com/apk/res/net.frontlinesms.android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#CCCCCC"
        >

    <net.frontlinesms.android.ui.view.ActionBar
            android:id="@+id/actionbar"
            fsms:button1="@drawable/actionbar_ic_search_purple"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    <View android:background="@drawable/android_r2_menubar_divider_xml"
          android:layout_width="fill_parent"
          android:layout_height="2dp"/>

    <ListView
            android:id="@+id/lst_contacts"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:background="#EFEFEF"
            />

    <CheckBox android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/showInvisible"
              android:visibility="gone"
              android:text="@string/showInvisible"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addContactButton"
            android:visibility="gone"
            android:text="@string/addContactButtonLabel"/>

</LinearLayout>